pipeline {
    agent any

    stages {
        stage('Github Code') {
            steps {
                git 'https://github.com/MhmmdBagci/springboot-backend.git'
            }
        }
        
        stage('Build Project') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Speichern') {
            steps {
                script {
                    sh '7z a build_artifacts.zip target/*'                  }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deployment erfolgreich ausgef√ºhrt'
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace'
            sh 'rm -rf ./*'
        }
        success {
            echo 'Pipeline erfolgreich abgeschlossen.'
        }
        failure {
            echo 'Pipeline fehlgeschlagen.'
        }
    }
}
