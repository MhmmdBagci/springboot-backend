pipeline {
    agent any

    stages {
        stage('Github Code') {
            steps {
                git 'https://github.com/MhmmdBagci/springboot-backend.git'
            }
        }
        
        stage('Build Project') {
            steps {
                sh 'mvn clean package -DskipTests=true' // Build ohne Tests
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test' // Tests ausf체hren
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deployment erfolgreich ausgef체hrt' // Simuliertes Deployment mit echo
                // Hier w체rde ein echtes Deployment-Skript stehen
                // Beispiel: sh 'docker-compose up -d'
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace'
            sh 'rm -rf ./*' // Workspace aufr채umen
        }
        success {
            echo 'Pipeline erfolgreich abgeschlossen.'
        }
        failure {
            echo 'Pipeline fehlgeschlagen.'
        }
    }
}
